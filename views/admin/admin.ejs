<% include ../partials/header %>

<link rel="stylesheet" href="/css/admin.css">

<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700,900" rel="stylesheet">
<div class="container">
	<div class="row left"  style="margin-top: 75px;">
		<div class="col-lg-9 cold-md-12">
			<h1>Flagged properties</h1>
			<% prop.forEach(function(prop){ %>
				<%  if(prop.reports.length>0){ %> 	
					<h2>Title:<%= prop.propTitle %></h2>
					<h2>Author of Property</h2>
					<h3>Username:<%= prop.author.username %></h3>
					<h3>EmailID:<%= prop.author.email  %></h3>
					<hr>
					<% prop.reports.forEach(function(report){ %>
						<h4>Reported By:<%= report.reportedby.username %></h4>
						<h4>Reason of Report: <%= report.reportreason %></h4>
						<h4>Reported On: <%= report.reportedOn %></h4>
						<hr>
					<% }); %>


				<% } %>
				<hr>
			<% }); %>
		</div>
		<div class="col-lg-3 right">
			<div class="row">
				<div class="col-lg-12 posts" >
					<h1>Posts</h1>
					<h1><i class="fas fa-pencil-alt"></i></h1>
				</div>

				<div class="col-lg-12  users">
					<h1>Users</h1>
					<h1><i class="fas fa-users"></i></h1>
				</div>
			</div>

		</div>
	</div>
</div>


<% include ../partials/footer %>
